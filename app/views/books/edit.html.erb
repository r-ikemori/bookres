<h1>編集画面</h1>
<%= form_with model: @book, method: :patch do |f| %>

<% if @book.errors.any? %>
 <%= @book.errors.count %>errors
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <%end%>
 </ul>
<% end %>


  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", "/books" %>